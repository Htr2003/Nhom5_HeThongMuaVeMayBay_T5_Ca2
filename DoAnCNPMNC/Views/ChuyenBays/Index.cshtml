@model IEnumerable<DoAnCNPMNC.Models.ChuyenBay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    <link href="~/Content/bootstrap.min.css" />

    <style>
        .btn-primary {
            margin-right: 10px;
        }

        /* Style for the table */
        .table {
            width: 1000px;
            border-collapse: collapse;
        }

            /* Style for the table header */
            .table thead {
                background-color: #333;
                color: #fff;
            }

            /* Style for table header cells */
            .table th {
                margin:30px;
                padding: 10px;

            }

            /* Style for table data cells */
            .table td {
                
                padding:10px;
                border: 1px solid #ddd;
            }


        /* Style for buttons in the table */
        .btn-info, .btn-success, .btn-danger {
            margin-right: 5px;
        }
    </style>
}

<div style="padding: 10px; padding-left: 100px; margin: 0px 20px 0px 20px;">

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Sort", "ChuyenBays", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Giờ khởi hành
                    </th>
                    <th>
                        Ngày khởi hành
                    </th>
                    <th>
                        Số ghế phổ thông
                    </th>
                    <th>
                        Số ghế thương gia
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChuyenBayID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GioKhoiHanh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayKhoiHanh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoGheTrong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoGheVipTrong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrangThai)
                        </td>
                        <td style="white-space: nowrap; display: inline-block; height:70px;">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ChuyenBayID }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ChuyenBayID }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ChuyenBayID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>




