                </div>
            </div>

            <div class="form-group " style="padding:10px;">
                Sân đến
                <div class="col-md-10">
                    @Html.DropDownList("SanDenID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SanDenID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group " style="padding:10px;">
                Giờ khởi hành
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GioKhoiHanh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GioKhoiHanh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group " style="padding:10px;">
                Giờ kết thúc
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GioKetThuc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GioKetThuc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding:10px;">
                Ngày khởi hành
