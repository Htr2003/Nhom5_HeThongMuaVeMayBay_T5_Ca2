                    @Html.EditorFor(model => model.NgayKhoiHanh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayKhoiHanh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding:10px;">
                Ngày Kết thúc
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding:10px;">
                Số ghế Trống
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoGheTrong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoGheTrong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding:10px;">
                Số ghế Vip Trống
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoGheVipTrong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoGheVipTrong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding:10px;">
                Trạng thái
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding:10px;">
                <div class="col-md-10 offset-md-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }


    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>
